sort	set		params
sort	add	Ascending	Tag
sort	add	Ascending	Item Type
sort	add	Descending	Date
sort	add	Ascending	Title
sort	set		params
filter	clear
filter	set		params
filter	add	not equal to	Tag
filter	set		params
template	open	text		#PATH#../factory/tag_template.html
